import numpy as np
import matplotlib.pyplot as plt

def lissajous_data(a, b, delta, t):
    """
    Функция для генерации данных фигуры Лисажу.

    :param a: частота для оси X
    :param b: частота для оси Y
    :param delta: сдвиг фаз
    :param t: массив временных точек
    :return: координаты X и Y для фигуры Лисажу
    """
    x = np.sin(a * t + delta)
    y = np.sin(b * t)
    return x, y

# Генерация временного ряда
t = np.linspace(0, 2 * np.pi, 1000)

# Определение соотношений частот для фигур Лисажу
frequencies = [(3, 2), (3, 4), (5, 4), (5, 6)]

# Создание фигуры для графиков
plt.figure(figsize=(10, 8))

# Цикл для создания каждой фигуры Лисажу
for i, (a, b) in enumerate(frequencies, 1):
    # Получение данных для каждой фигуры
    x, y = lissajous_data(a, b, delta=0, t=t)

    # Добавление подграфика в сетку
    plt.subplot(2, 2, i)
    plt.plot(x, y)
    plt.title(f'Частоты {a}:{b}')

plt.tight_layout()
plt.show()

