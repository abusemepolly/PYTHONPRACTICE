import requests

def send_request(method, url, data=None):
    if method == 'GET':
        response = requests.get(url)
    elif method == 'POST':
        response = requests.post(url, data=data)
    elif method == 'OPTIONS':
        response = requests.options(url)
    else:
        return "Unsupported Method"

    request_info = f"Request {method} to {url}"
    if data:
        request_info += f" with data: {data}"

    response_info = (
        f"Response Code: {response.status_code}\n"
        f"Headers: {response.headers}\n"
        f"Body: {response.text}\n"
    )

    return request_info + "\n" + response_info


url = "https://httpbin.org/"

print(send_request('OPTIONS', url))
print(send_request('GET', url + 'get'))
print(send_request('POST', url + 'post', data={'key': 'value'})) 
